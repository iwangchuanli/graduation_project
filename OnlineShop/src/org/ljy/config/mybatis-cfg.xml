<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- MyBatis核心配置文件 -->
<configuration>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/onlineshop?characterEncoding=utf-8"
					/>
				<property name="username" value="root" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- 映射文件 -->
	<mappers>
		<mapper resource="org/ljy/config/bankcardMapper.xml"/>
		<mapper resource="org/ljy/config/goodsMapper.xml"/>
		<mapper resource="org/ljy/config/orderMapper.xml"/>
		<mapper resource="org/ljy/config/paymentMapper.xml"/>
		<mapper resource="org/ljy/config/searchResultMapper.xml"/>
		<mapper resource="org/ljy/config/shopMapper.xml"/>
		<mapper resource="org/ljy/config/shoppingCartMapper.xml"/>
		<mapper resource="org/ljy/config/userMapper.xml"/>
	</mappers>
</configuration>