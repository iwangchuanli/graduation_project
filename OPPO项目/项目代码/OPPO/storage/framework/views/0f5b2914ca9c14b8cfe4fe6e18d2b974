        var len = jQuery("#index_focus .slideshow").eq(0).children().length;
        if(len>1){
            var slidebar = jQuery("#index_focus .jqslidebar").eq(0);
            for (var i = 0; i < len; i++) {
                jQuery(slidebar).append("<li></li>");
            }
            jQuery("#index_focus").slide( { mainCell:".jqbd ul", effect:"leftLoop",autoPlay:true,mouseOverStop:false,trigger:"click",interTime:5000 });
        }
        else{
            jQuery("#index_focus a.prev").hide();
            jQuery("#index_focus a.next").hide();
            jQuery("#index_focus .hd").hide();
        }
